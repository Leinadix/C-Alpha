---
Checks: >
  clang-diagnostic-*,
  clang-analyzer-*,
  llvm-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,
  bugprone-*,
  portability-avoid-pragma-once,    # <-- enforce include guards
  -clang-analyzer-alpha*,
  -modernize-use-trailing-return-type,
  -readability-braces-around-statements,
  -readability-magic-numbers,
  -readability-named-parameter,
  -llvm-header-guard,               # still disabled
  -llvm-include-order

WarningsAsErrors: ''

HeaderFilterRegex: '(src/|include/|lsp/|tests/).*\.(h|hpp)$'

FormatStyle: file

CheckOptions:
  # Treat pragma-once avoidance as an error, not just a warning
  - key: portability-avoid-pragma-once.WarningOnly
    value: 'false'
---
